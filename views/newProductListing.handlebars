<div class="product-card">
    <div class="page-title"><h1>Post Product</h1></div>
    <form class="product-form">
        <div class="form-group">
            <label>Product Category:</label>
            <select class="form-input" id="category">
                <!--Need to get category list form db.-->
            </select>
        </div>
        <div class="form-group">
            <label>Product Name:</label>
            <input class="form-input" type="text" id="name"/>
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input class="form-input" type="number" id="price" min="0.00" step="0.01" value="1"/>
        </div>
        <div class="form">
            <label>Stock:</label>
            <input class="form-input" type="number" id="stock" min="1" value="1"/>
        </div>
        <div class="form">
            <label>Description</label>
            <textarea class="form-input" type="text" id="description"/>
        </div>
        
        <div class="form">
            <button class="btn" type="submit">Post</button>
        </div>
    </form>
</div>

<script src="/js/newProduct.js"></script>