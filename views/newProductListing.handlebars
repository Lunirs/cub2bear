<div class='card-container m-auto'>
  <div class='card border-0'>
    <div class='product-card'>
      <div class='page-title'><p class='text-center'>POST PRODUCT</p></div>
      <div class='d-flex justify-content-center'>
        <form class='product-form ml-2'>
          <div class='form-group'>
            <label>NAME:</label>
            <br />
            <input class='form-input' type='text' style='width:90%' id='name' />
          </div>
          <div class='form-group'>
            <label>PRICE:</label>
            <br />
            <input
              class='form-input'
              type='number'
              style='width:90%'
              id='price'
            />
          </div>
          <div class='form'>
            <label>STOCK:</label>
            <br />
            <input
              class='form-input'
              type='number'
              style='width:90%'
              id='stock'
            />
          </div>
          <div class='form'>
            <label>DESCRIPTION:</label>
            <br />
            <textarea
              class='form-input'
              type='text'
              style='width:90%'
              id='description'
            ></textarea>
          </div>
          <div class='form'>
            <label>FOR AGES:</label><br />
            <input
              type='checkbox'
              id='category_1'
              name='category_1'
              value='1'
            />
            <label for='category_1'> 0-3 Months</label><br />
            <input
              type='checkbox'
              id='category_2'
              name='category_2'
              value='2'
            />
            <label for='category_2'> 3-6 Months</label><br />
            <input
              type='checkbox'
              id='category_3'
              name='category_3'
              value='3'
            />
            <label for='category_3'> 6-12 Months</label><br />
            <input
              type='checkbox'
              id='category_4'
              name='category_4'
              value='4'
            />
            <label for='category_4'> 12-18 Months</label><br />
            <input
              type='checkbox'
              id='category_5'
              name='category_5'
              value='5'
            />
            <label for='category_5'> 18-24 Months</label><br />
          </div>
          <div class='d-flex justify-content-center'>
            <button class='btn' type='submit'>Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src='/js/newProduct.js'></script>