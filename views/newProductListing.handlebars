<div class="product-card">
    <div class="page-title"><h1>Post Product</h1></div>
    <form class="product-form">
        <div class="form-group">
            <label>Name:</label>
            <input class="form-input" type="text" id="name"/>
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input class="form-input" type="number" id="price"/>
        </div>
        <div class="form">
            <label>Stock:</label>
            <textarea class="form-input" type="number" id="stock"/>
        </div>
        <div class="form">
            <label>Description</label>
            <textarea class="form-input" type="text" id="description"/>
        </div>
        
        <div class="form">
            <button class="btn" type="submit">Post</button>
        </div>
    </form>
</div>

<script src="/js/newProduct.js"></script>