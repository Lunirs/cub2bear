<div class='jumbotron jumbotron-fluid'>
  <div class='container'>
    <h1 class='display-4 text-center'>Fluid jumbotron</h1>
    <p class='lead'>This is a modified jumbotron that occupies the entire
      horizontal space of its parent.</p>
  </div>
</div>
<div class='d-flex row justify-content-around'>
  {{#each categories as |category|}}

    <a href='/category/{{id}}'>{{name}}</a>

  {{/each}}
</div>

<div class='d-flex row justify-content-around'>
  {{#each products as |product|}}

    <div
      class='card col-sm-4 col-md-5 m-2 ml-5'
      style='max-width: 18rem; min-width:18rem;'
    >
      <h5 class='card-title mt-3'><a href='/products/{{id}}'>{{name}}</a></h5>
      <img
        class='card-img-top'
        src='/img/placeholder.jpg'
        alt='Card image cap'
      />
      <div class='card-body'>

        <p class='card-text'>Price: ${{price}}</p>
        <p class='card-text'>Posted By: {{user.username}}</p>
        <a href='#' class='btn btn-primary'>Add To Cart</a>
      </div>
    </div>
  {{/each}}
</div>