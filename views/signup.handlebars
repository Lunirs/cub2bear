<div class='card-container m-auto'>
  <div class='d-flex justify-content-center'>
    <div class='signup-card mr-0 ml-0 p-0'>
      <div class='page-title-signup'><p class='text-center'>SIGN UP</p></div>
      <form class='signup-form'>
        <div class='form-group'>
          <label for='email'>EMAIL:</label>
          <br />
          <input
            class='form-input-signup'
            type='text'
            id='email'
            style='width:90%'
          />
        </div>
        <div class='form-group'>
          <label for='username'>USERNAME:</label>
          <br />
          <input
            class='form-input-signup'
            type='text'
            id='username'
            style='width:90%'
          />
        </div>
        <div class='form'>
          <label for='password'>PASSWORD:</label>
          <br />
          <input
            class='form-input-signup'
            type='password'
            id='password'
            style='width:90%'
          />
        </div>
        <div class='form'>
          <label for='password-confirm'>CONFIRM PASSWORD:</label>
          <br />
          <input
            class='form-input-signup'
            type='password'
            id='password2'
            style='width:90%'
          />
        </div>
        <div class='form'>
          <button class='btn-signup' type='submit'>Sign Up</button>
        </div>
      </form>
    </div>
  </div>

</div>
<script src='/js/signup.js'></script>